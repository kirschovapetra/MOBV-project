<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_theme_light_background"
    app:cardBackgroundColor="@color/md_theme_light_background">

    <LinearLayout
        android:id="@+id/contactIconWrapper"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/contactCardIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_people_alt_24"
            android:contentDescription="@string/contact_card_contact_icon_description" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/contactInfoWrapper"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toStartOf="@+id/contactIconWrapper"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contactCardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/contactCardName"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contactCardAccountId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:text="@string/CardcontactId"
            android:textSize="11sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.cardview.widget.CardView>