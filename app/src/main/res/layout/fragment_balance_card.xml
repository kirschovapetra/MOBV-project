<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_black_border"
    app:cardBackgroundColor="@color/md_theme_light_background"
    android:layout_marginBottom="10dp"
    >

    <LinearLayout
        android:id="@+id/paymentCardWrapper"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="0dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/custom_black_border"
        android:orientation="horizontal"
        android:padding="1dp"
        >

        <LinearLayout
            android:id="@+id/paymentTypeIconWrapper"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/paymentCardTypeIcon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="plusko"
                android:scaleType="fitCenter"
                app:layout_constraintLeft_toLeftOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/allMightyWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/upperHalf"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/paymentSourceAccountName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:text="Jozko"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/paymentAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="50"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/paymentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="20.10.2015"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lowerHalf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/paymentSourceAccountId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="46546496846fdsfdas4f6das4f6sf4sa65f4sda6f479as8f463sad1f"
                    android:textSize="13sp"
                    android:textStyle="normal" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>