<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActionBarTitle" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/md_theme_light_primary</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="ActionBarStyle" parent="@style/Widget.Material3.Toolbar">
        <item name="android:background">@color/md_theme_light_background</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="RedIcon" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Icon">
        <item name="android:tint">@color/error</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/md_theme_light_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/error</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomMaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleIconStyle">@style/RedIcon</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorOnPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnSecondary">@color/md_theme_light_primary</item>
        <item name="colorOnSurface">@color/md_theme_light_primary</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>
</resources>